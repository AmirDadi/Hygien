
<body>

    <div id="wrapper">

      
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Sensors</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Add New Sensor
                        </div>
                        <div class="panel-body">
                         <%= form_for(@sensor)  do |f| %>
                            <div class="row">
                                <div class="col-lg-6">
                                    <form role="form">

                                        <div class="form-group">

                                            <label>Sensor Id</label>
                                            <!-- <input class="form-control" placeholder="User ID"> -->
                                            <%= f.number_field :sid , :class => "form-control" %>
                                            

                                      
                                        </div>


                                        <div class="form-group">
                                            <label>Location</label>
                                            <!-- <input class="form-control" placeholder="Name"> -->
                                            <%= f.text_field :location , :class => "form-control" %>
                                        </div>


                                        <div class="form-group">
                                            <label>Type</label>
                                            <!-- <input class="form-control" placeholder="Surname"> -->
                                            <%= f.text_field :type , :class => "form-control" %>
                                        </div>

    
                                        <!-- <button type="submit" class="btn btn-default">Submit Button</button> -->
                                        <%= f.submit "Submit", :class => "btn btn-default" %>
                                        <button type="reset" class="btn btn-default">Reset Button</button>
                                    </form>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                              
                                    </form>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                      <% end %>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->



    
    <!-- jQuery -->
    <%= javascript_include_tag('bower_components/jquery/dist/jquery.min.js') %>
    

    <!-- Bootstrap Core JavaScript -->
    <%= javascript_include_tag('bower_components/bootstrap/dist/js/bootstrap.min.js') %>
    
    <!-- Metis Menu Plugin JavaScript -->
   

    <!-- DataTables JavaScript -->

    
    <%= javascript_include_tag ('bower_components/metisMenu/dist/metisMenu.min.js') %>
    <%= javascript_include_tag ('dist/js/sb-admin-2.js') %>
     

</body>

